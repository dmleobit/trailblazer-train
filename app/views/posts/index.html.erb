<h2>Post list page</h2>

<%= link_to  "Create new post", new_post_path, class: 'btn btn-outline-primary' %>
<%= link_to  "Random post or posts", create_random_posts_path, method: :post, class: 'btn btn-outline-primary' %>
<%= link_to  "Destroy all", destroy_all_posts_path, method: :delete, class: 'btn btn-outline-danger' %>

<% @posts.each do |post| %>
  <div class='post-block'>
    <p><%= post.text %></p>
    <h6>Author - <%= post.user.email %></h6>
    <%= link_to  "Like", like_post_path(post), method: :post %>
    <%= post.likes.count %>
    <%= link_to  "Comments", comments_path(post) %>
    <%= post.comments.count %>
  </div>
<% end %>
